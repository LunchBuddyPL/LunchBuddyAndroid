<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        tools:context="com.nupli.mlf.lunchbuddies.JoinGroupActivity">

    <android.support.v7.widget.Toolbar
            android:id="@+id/joinGroupToolbar"
            app:title=" "
            style="@style/AppTheme.ToolBarStyle">

        <TextView
                android:id="@+id/toolbar_title"
                android:text="@string/join_group_title"
                style="@style/AppTheme.ToolBarStyle.HeaderTxt"/>
    </android.support.v7.widget.Toolbar>

    <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_background"
            app:hintTextAppearance="@style/TextInputEditTextHint"
            android:layout_margin="20dp"
            style="@style/TextInputEditTextHint">

        <android.support.design.widget.TextInputEditText
                android:id="@+id/groupCode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textCapCharacters"
                android:hint="@string/join_group_enter_code"
                android:maxLength="6"
                android:imeOptions="actionDone"
                android:nextFocusUp="@id/groupCode"
                android:nextFocusLeft="@id/groupCode"
                style="@style/TextInputEditText"/>
    </android.support.design.widget.TextInputLayout>

</LinearLayout>
